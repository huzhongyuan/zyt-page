/* pages/to_play/to_play.wxss */
/* 我是分割线 */
.thinline {
  width: 750rpx;
  height: 1rpx;
  background-color: #EFEFEF;
}
.fatline {
  width: 750rpx;
  height: 10rpx;
  background-color: #EFEFEF;
}
.header {
  margin-bottom: 15rpx;
}
.all_theme {
  width: 750rpx;
  margin-top: 33rpx;
  margin-bottom: 37rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  overflow: scroll;
}
.theme {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin:0rpx 40rpx;
}
.theme image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 24rpx;
}
.theme text{
  font-size: 28rpx;
}

.search_input_box{ 
  background-color: #EFEFEF;
  border-radius: 20rpx;
  width: 600rpx;
  height: 70rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  color: #333333;
}
.search_input_box image {
  width: 33rpx;
  height: 35rpx;
  margin-left: 36rpx;
  margin-right: 20rpx;
  margin-top: 18rpx;
}

.search_input_box input {
  width: 511rpx;
  height: 70rpx;
}

.search_btn {
  font-size: 32rpx;
  color: #333333;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.hot_list {
  height: 100rpx;
  width: 680rpx;
  margin-left: 35rpx;
  overflow: scroll;
  white-space: nowrap;
  display: flex;
  align-items: center;
}
.hot_item {
  color: #333333;
  font-size: 24rpx;
  margin-right: 100rpx;
  display: inline;
}
.content {
  width: 750rpx;
}
.content_nav {
  width: 700rpx;
  height: 100rpx; 
  padding-left: 25rpx;
  display: flex;
  align-items: center;
}
.content_nav_item {
  color: #333333;
  font-size: 32rpx;
  margin-right: 76rpx;
  display: inline;
}
.content_nav_box {
  width: 700rpx;
  overflow: auto;
  white-space: nowrap;
  display: flex;
  align-items: center;
}

.activity_photo {
  width: 200rpx;
  height: 200rpx;
  margin-right: 53rpx;
  margin-top: 31rpx;
}
.arr_detail {
  margin-top: 31rpx;
}
.activity_title {
  margin-top: 15rpx;
  color: #333333;
  font-size: 32rpx;
  margin-bottom: 20rpx;
  height: 40rpx;
  width: 442rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.place_detail {
  color: #333333;
  font-size: 26rpx;
  margin-bottom: 50rpx;
  height: 70rpx;
  overflow: hidden;
   text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical; 
}
.activity_cion {
  display: flex;
  width: 20rpx;
  height: 26rpx;
  margin-right: 17rpx;
}

.arr_box {
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.arr_box view {
  display: flex;
  align-items: center;
  line-height: 30rpx;
  color: #333333;
  font-size: 24rpx;
  height: 30rpx;
  width: 405rpx;
    overflow: hidden;
   text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical; 
}

.activity_list {
  width: 750rpx;
  height: 260rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.place_detail {
  width: 442rpx;
  height: 70rpx;
}
.activity_footer{
   width: 750rpx;
   height: 80rpx;
   display: flex;
   flex-direction: row;
   align-items: center;
}
.gone {
  margin-left: 82rpx;
  display: flex;
  align-items: center;
}
.gone_img {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.wanted_img {
  width: 26rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.wanted {
  margin-left: 60rpx;
  display: flex;
  align-items: center;
}
.activity_footer {
  font-size: 28rpx;
  color: #333333;
}
.play_with {
  color: #F1793E;
  margin-left: 220rpx;
}

.createActivity {
  position: fixed;
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.createActivity image{
  width: 141rpx;
  height: 141rpx;
  opacity: 0.7
}
.bottomer {
  display: flex;
  justify-content: center;
  color: #cccccc;
  font-size: 30rpx;
  height: 180rpx;
  align-items: center;
}
