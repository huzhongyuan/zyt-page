}
.select_box{
  background: #fff;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-top:1px solid #efefef;
  border-bottom:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
}
.select_text{
  font-size: 32rpx;
  flex: 1;
  width: 250rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #333333;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  padding-top: 24rpx;
  height: 56rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  padding-left: 51rpx;
}


