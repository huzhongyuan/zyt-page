.line {
  width: 100%;
  height: 1px;
  background-color: #ccc;
}
.search_input_box{ 
  background-color: #EFEFEF;
  border-radius: 20rpx;
  width: 600rpx;
  height: 70rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: row;
  color: #333333;
}
.search_input_box image {
  width: 33rpx;
  height: 35rpx;
  margin-left: 36rpx;
  margin-right: 20rpx;
  margin-top: 18rpx;
}

.search_input_box input {
  width: 511rpx;
  height: 70rpx;
}

.search_btn {
  font-size: 32rpx;
  color: #333333;
}

.search {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
    background-color: white;
}

.searchBlack1 {
  width: 750rpx;
  height: 18rpx;
